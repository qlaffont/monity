{
  "name": "monity",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server/server.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node ./dist/server/server.js",
    "lint": "npm run lint:srv",
    "lint:srv": "npx eslint server --ext .ts",
    "test": "npm run test:srv",
    "test:srv": "npx jest --config=server/jest.config.js --forceExit",
    "test:srv-watch": "npx jest --watch --config=server/jest.config.js"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@zeit/next-sass": "^1.0.1",
    "cron": "^1.7.2",
    "fastify": "2.11.0",
    "fastify-formbody": "^3.1.0",
    "fastify-helmet": "^3.0.2",
    "fastify-swagger": "^2.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.7",
    "next": "latest",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tcp-ping": "^0.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.7",
    "@types/react": "^16.9.17",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
